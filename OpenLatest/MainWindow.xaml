<Window x:Class="OpenLatest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenLatest" d:DataContext="{d:DesignInstance Type=local:MainWindow_Data}"
        mc:Ignorable="d"
        Title="MainWindow" SizeToContent="WidthAndHeight" MinHeight="70" MinWidth="410" ResizeMode="CanResize" Height="78" Width="360">
    <Grid Margin="0,0,10,10">
        <TextBox x:Name="folderBox" IsReadOnly="True" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="{Binding Folder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="335" />
        <Button Content="Browse" HorizontalAlignment="Left" Margin="350,9,0,0" VerticalAlignment="Top" Height="19" Width="50" Click="OpenFolderDialog"/>
    </Grid>
</Window>
